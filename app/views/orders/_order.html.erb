<div id="<%= dom_id order %>" class="card border border-2 p-1 mt-3" style="width: 18rem;">
  <p class="card-header">
    <strong><%= order.product_name %></strong>
  </p>

  <div class="card-body">
    <p>
      <%= order.customer.first_name %>
      <%= order.customer.last_name %>
      bought <%= order.product_name %>: <%= order.product_count %> items
      </p>
  </div>

  <div class="card-footer d-flex gap-1">
    <%= link_to "Edit", edit_order_path(order), class:"btn btn-primary" %>
    <%= button_to "Destroy", order, method: :delete, class:"btn btn-danger" %>
  </div>  
</div>
