<div class="container mt-3">
  <div class="row">
    <div class="col-lg table-responsive">
      <h1 class="display-4">Customers</h1>
      <table class="table ml-2">
        <thead>
          <tr class="table-active">
            <th>Picture</th>
            <th>Full Name</th>
            <th>Number of Orders</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %> <!-- Loop through the customers -->
            <tr>
              <td><%= icon("fa-regular", "user") %></td>
              <td><%= customer.full_name %></td>
              <td><%= customer.orders.count %></td> <!-- Display the number of orders the customer has -->
              <td><%= button_to 'Show', customer, method: :get, class: 'btn btn-primary' %></td>
              <td><%= button_to 'Edit', edit_customer_path(customer), method: :get, class: 'btn btn-primary' %></td>
              <td><button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#myModal-<%= customer.id %>">Delete</button></td>
            </tr> 
            <%= render "deleteModal", customer: customer %>
            <% end %>
        </tbody>
      </table>
      <%= link_to "New Customer", new_customer_path, class: "btn btn-success mb-3" %>
    </div>
  </div>
</div>